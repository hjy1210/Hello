<Window x:Class="InspectShift.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >
    <Grid>
        <!--<ContentControl prism:RegionManager.RegionName="ContentRegion" />-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Pick directiory to inspect" Name="btnPickDirectory" Click="btnPickDirectory_Click"/>
            <TextBox Width="400" IsReadOnly="True" Name="tbxDirectory"/>
            <TextBlock Text=" file pattern:"/>
            <TextBox Text="*.jpg" Name="tbxPattern" Width="60" />
            <ComboBox Width="400" ItemsSource="{Binding Files}" SelectedItem="{Binding SelectedFile}" />
        </StackPanel>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas Width="4000" Height="3000">
                <Image Name="image1" Source="{Binding BitmapSrc}" />
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>
